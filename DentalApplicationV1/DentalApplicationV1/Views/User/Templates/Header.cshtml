<header class="header">
    <!--Menu Icon for mobile-->
    <div class="menubar">
        <button class="btn btn--m btn--icon btn--white" lx-ripple="white" ng-click="Sidebar.toggleSidebar()">
            <i class="mdi mdi-menu"></i>
        </button>
    </div>

    <!--Logo-->
    <h1 class="main-logo">
        <a ui-sref="Profile" class="main-logo__link" lx-ripple="white">
            <img src="/images/delete.png">
        </a>
    </h1>

    <!--Menu for Desktop-->
    <nav class="main-nav main-nav--lap-and-up">
        <ul>
            <li>
                <a ui-sref="Notification" class="main-nav__link" lx-ripple="white">
                    <i class="icon icon--s icon--white icon--flat mdi mdi-earth"
                       lx-tooltip="Notifications" tooltip-position="bottom">
                    </i>Notifications<span ng-show="notifCount != 0 ? true : false" class="fs-subhead tc-red-900" style="padding-left:5px;">{{notifCount}}</span>
                </a>
            </li>
            <li>
                <a ui-sref="Setting" class="main-nav__link" lx-ripple="white">
                    <i class="icon icon--s icon--white icon--flat mdi mdi-settings"
                       lx-tooltip="Settings" tooltip-position="bottom"></i>
                    Settings
                </a>
            </li>
            <li>
                <a href="" class="main-nav__link" lx-ripple="white" ng-click="logout()">
                    <i class="icon icon--s icon--white icon--flat mdi mdi-logout"
                       lx-tooltip="Logout" tooltip-position="bottom"></i>
                    Log Out
                </a>
            </li>
        </ul>
    </nav>

    <!--Menu for Mobile-->
    <nav class="main-nav main-nav--palm">
        <lx-dropdown position="right" from-top>
            <button class="btn btn--m btn--white btn--icon" lx-ripple="white" lx-dropdown-toggle>
                <i class="mdi mdi-dots-vertical"></i>
            </button>

            <lx-dropdown-menu>
                <ul>
                    <li><a ui-sref="Notification" class="dropdown-link" lx-ripple="white">Notification<span ng-show="notifCount != 0 ? true : false" class="fs-subhead tc-red-900">{{notifCount}}</span></a></li>
                    <li><a ui-sref="Setting" class="dropdown-link" lx-ripple="white">Setting</a></li>
                    <li><a href="" class="dropdown-link" lx-ripple="white" ng-click="logout()">Logout</a></li>
                </ul>
            </lx-dropdown-menu>
        </lx-dropdown>
    </nav>
</header>
