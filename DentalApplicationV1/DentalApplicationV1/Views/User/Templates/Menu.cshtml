@{
    Layout = "~/Views/Shared/_DataTableLayout2.cshtml";
}

@section TableContent{
    <div id="masterList"></div>
}

@section FormContent{
    <div flex-container="row" flex-gutter="24" style="padding-left:20px; padding-right:20px;">
        <div id="progress"></div>
        <div flex-item>
            <lx-text-field label="Parent Menu">
                <input type="text"
                       name="Parent Menu"
                       ng-model="dataDefinitionMaster.DataItem.ParentName"
                       ng-disabled="dataDefinitionMaster.ViewOnly"
                       ng-click="showDialog('Menu')">
            </lx-text-field>
        </div>
        <div flex-item>
            <lx-text-field label="Name" error="validateInput(dataDefinitionMaster.DataItem.Name)">
                <input type="text"
                       name="Name"
                       ng-model="dataDefinitionMaster.DataItem.Name"
                       ng-disabled="dataDefinitionMaster.ViewOnly">
            </lx-text-field>
        </div>
        <div flex-item>
            <lx-text-field label="Url" error="validateInput(dataDefinitionMaster.DataItem.Url)">
                <input type="text"
                       name="Url"
                       ng-model="dataDefinitionMaster.DataItem.Url"
                       ng-disabled="dataDefinitionMaster.ViewOnly" />
            </lx-text-field>
        </div>
    </div>
    <div flex-container="row" flex-gutter="24" style="padding-left:20px; padding-right:20px;">
        <div flex-item>
            <lx-text-field label="Description">
                <input type="text"
                       name="Description"
                       ng-model="dataDefinitionMaster.DataItem.Description"
                       ng-disabled="dataDefinitionMaster.ViewOnly" />
            </lx-text-field>
        </div>
    </div>
    <div flex-container="row" flex-gutter="24" style="padding-left:20px; padding-right:20px;">
        <div flex-item style="{{checkBoxStyle}}">
            <div class="checkbox">
                <input type="checkbox"
                       id="Status"
                       class="checkbox__input"
                       ng-model="dataDefinitionMaster.DataItem.StatusHolder"
                       ng-disabled="dataDefinitionMaster.ViewOnly">
                <label for="Status" class="checkbox__label">{{statusLabel}}</label>
            </div>
        </div>
    </div>
    <br />
    <lx-dialog class="dialog dialog--l" id="Menu" auto-close="true">
        <div class="dialog__header">
            <div class="toolbar bgc-light-blue-500 pl++">
                <span class="toolbar__label tc-white fs-title">
                    Menu List
                </span>
            </div>
        </div>
        <div class="dialog__content">
            <dir-data-modal1 datadefinition="dataDefinitionMenuList" otheractions="otherActionMenu(action)" closecontainer="closeMenu(dialog)"></dir-data-modal1>
        </div>
        <div class="dialog__actions">
        </div>
    </lx-dialog>
}

